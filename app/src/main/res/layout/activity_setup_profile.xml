<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupProfileActivity">


  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="100dp"
      android:layout_alignParentTop="true"
      android:layout_marginTop="28dp"
      android:src="@drawable/insta" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginTop="15dp"
      android:gravity="center"
      android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:src="@drawable/avatar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tap to upload profile picture"
        android:textColor="@color/blue" />

    <EditText
        android:id="@+id/newusername"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter a Username" />

    <EditText
        android:id="@+id/newbio"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter a bio. Something about yourself" />


    <Button
        android:id="@+id/setupbtn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#25A3E8"
        android:text="Next"
        android:textAllCaps="false" />
  </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:textStyle="bold"
      android:text="A CLONE OF INSTAGRAM BUILT BY ADITYA BONDE"
      android:textColor="@color/black"
      android:gravity="center"/>

  </RelativeLayout>